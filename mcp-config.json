{
  "name": "mp-editor",
  "version": "1.0.0",
  "description": "公众号文章格式编辑器 MCP 服务",
  "services": {
    "format": {
      "description": "格式化文章内容",
      "parameters": {
        "content": {
          "type": "string",
          "description": "原始文章内容"
        },
        "style": {
          "type": "string",
          "description": "格式化风格",
          "enum": ["简洁风", "文艺风", "商务风", "幽默风", "权威风"]
        },
        "customStyle": {
          "type": "string",
          "description": "自定义风格要求"
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "formattedContent": {
            "type": "string",
            "description": "格式化后的内容"
          },
          "previewHtml": {
            "type": "string",
            "description": "预览 HTML"
          }
        }
      }
    },
    "export": {
      "description": "导出文章",
      "parameters": {
        "content": {
          "type": "string",
          "description": "文章内容"
        },
        "format": {
          "type": "string",
          "enum": ["pdf", "word"],
          "description": "导出格式"
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "fileUrl": {
            "type": "string",
            "description": "导出文件 URL"
          }
        }
      }
    }
  }
} 